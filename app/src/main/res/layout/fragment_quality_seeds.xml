<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_background_color"
    tools:context=".ui.qualityseeds.QualitySeedFragment">

    <FrameLayout
        android:id="@+id/frameLayoutQS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background_color"
        android:layout_marginBottom="@dimen/gap_65"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/gap_10"
        android:layout_marginBottom="@dimen/gap_5"
        android:layout_marginStart="@dimen/gap_10"
        android:layout_marginEnd="@dimen/gap_10"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnRegions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seeds"
            android:textAllCaps="false"
            android:background="@drawable/selected_tab_indicator"/>

        <Button
            android:id="@+id/btnAgent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agents"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/gap_10"
            android:layout_marginEnd="@dimen/gap_10"
            android:background="@drawable/selected_tab_indicator"/>

        <Button
            android:id="@+id/btnMerchants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Merchants"
            android:textAllCaps="false"
            android:background="@drawable/selected_tab_indicator"/>
    </LinearLayout>

</RelativeLayout>